<ul><% @artists.each do |artist| %>
  <div class="artist_div"><b><%= artist.name %></b>
  
  <ul><% @albums.each do |album| %>
    <% if artist.id == album.artist_id %>
      <li><i><%= album.name %></i></li>

        <ul><% @stocks.each do |stock| %>
          <% if album.id == stock.album_id %>
            <li>Format: <%= stock.format %> | Stock: <%= stock.stock_level %> | Optimal: <%= stock.threshold  %> | Buy: <%= stock.buy_price %> | Sell: <%= stock.sell_price %></li>
          <% end %>
        <% end %>
        </ul>
      
      <% end %>
    <% end %>

</ul>
</div>
<% end %>
</ul>